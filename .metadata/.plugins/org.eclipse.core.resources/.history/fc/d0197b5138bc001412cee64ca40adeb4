$(document).ready(function (){
	var box = $("#angleBox");
	
	$('svg').css("width", window.innerWidth).css("height", window.innerHeight-10);
	
	var angle = 0;
	var radius = 250;
	var x = radius*2+50; 
	var y = radius+50; 
	
	var animator;
	animateAngle();
	
	function animateAngle(){
		var toAngle = parseInt(box.val());
		
		if(angle-toAngle > 0){
			angle -= 1;
		}else if (angle-toAngle < 0){
			angle += 1;
		}else{
			
		}
		var radians = (Math.PI * 2) * (angle % 360) / 360 ;
		
		x = 300 + (Math.cos(radians) * radius);
		y = 300 - (Math.sin(radians) * radius);
		
		
		$("#angle").attr("x2", x);
		$("#angle").attr("y2", y);
		
		animator = setTimeout(animateAngle, 10/Math.abs(angle-toAngle));
	}
	
});

