$(document).ready(function (){
	var box			= $("#angleBox");
	var beginX		= window.innerWidth/2;
	var beginY		= window.innerHeight/2;
	
	
	var radius		= 350;
	
	var svg			= $('svg');
	
	var circle		= $('#mainCircle');
	
	var sinAxis 	= $("#sinAxis");
	var cosAxis		= $("#cosAxis");
	var tgAxis		= $("#tgAxis");
	var cotgAxis	= $("#cotgAxis");
	var angleArm	= $("#angleArm");
	
	svg.css({
		width:  window.innerWidth,
		height: window.innerHeight
	});
	
	circle.attr({
		cx : beginX,
		cy : beginY,
		r : radius
	});
	
	sinAxis.attr({
		x1: beginX,
		y1: 0,
		x2: beginX,
		y2: window.innerHeight
	});
	
	
	cosAxis.attr({
		x1: 0,
		y1: beginY,
		x2: window.innerWidth,
		y2: beginY
	});
	
	
	tgAxis.attr({
		x1: beginX + radius,
		y1: 0,
		x2: beginX + radius,
		y2: window.innerHeight
	});
	
	cotgAxis.attr({
		x1: 0,
		y1: beginY - radius,
		x2: window.innerWidth,
		y2: beginY - radius
	});
	
	angleArm.attr({
		x1: beginX,
		y1: beginY
	});
	
	var angle = 0;
	
	
	var animator;
	
	
	animateAngle();
	
	function animateAngle(){
		var toAngle = parseInt(box.val());
		
		if(angle-toAngle > 0){
			angle -= 1;
		}else if (angle-toAngle < 0){
			angle += 1;
		}else{
			
		}
		var radians = (Math.PI * 2) * (angle % 360) / 360 ;
		
		x = beginX + (Math.tg(radians) * radius);
		
		
		y = beginY - (Math.cotg(radians) * radius);
		
		
		angleArm.attr("x2", x);
		angleArm.attr("y2", y);
		
		
		
		
		animator = setTimeout(animateAngle, 10/Math.abs(angle-toAngle));
	}
	
});

