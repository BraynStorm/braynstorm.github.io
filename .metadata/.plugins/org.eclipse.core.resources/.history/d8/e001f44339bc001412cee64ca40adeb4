$(document).ready(function (){
	var box = $("#angleBox");
	var beginX = window.innerWidth/2;
	var beginY = window.innerHeight/2;
	
	var svg = $('svg');
	svg.css({
		"width":  window.innerWidth,
		"height": window.innerHeight-10
	});
	$('circle').attr({
		"cx" : beginX,
		"cy" : beginY
	});
	
	
	
	
	
	
	
	var angle = 0;
	var radius = 250;
	
	var animator;
	animateAngle();
	
	function animateAngle(){
		var toAngle = parseInt(box.val());
		
		if(angle-toAngle > 0){
			angle -= 1;
		}else if (angle-toAngle < 0){
			angle += 1;
		}else{
			
		}
		var radians = (Math.PI * 2) * (angle % 360) / 360 ;
		
		x = 300 + (Math.cos(radians) * radius);
		y = 300 - (Math.sin(radians) * radius);
		
		
		$("#angle").attr("x2", x);
		$("#angle").attr("y2", y);
		
		animator = setTimeout(animateAngle, 10/Math.abs(angle-toAngle));
	}
	
});

